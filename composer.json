  "license": "MIT",
  "require": {
    "php": "^7.0",
    "ext-pcntl": "*",
    "pauci/cqrs": "^0.1.0",
    "beberlei/assert": "^2.5",
    "doctrine/orm": "^2.5"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^2.6",
    "phpunit/phpunit": "^5.3"
  },
  "autoload": {
